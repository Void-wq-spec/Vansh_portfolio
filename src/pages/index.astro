	<script>
		// Theme toggle icon switching
		const themeToggle = document.getElementById('theme-toggle');
		const sunIcon = themeToggle?.querySelector('.sun-icon');
		const moonIcon = themeToggle?.querySelector('.moon-icon');

		function updateThemeIcon() {
			const isDark = document.documentElement.classList.contains('dark');
			if (sunIcon && moonIcon) {
				if (isDark) {
					sunIcon.classList.add('hidden');
					moonIcon.classList.remove('hidden');
				} else {
					sunIcon.classList.remove('hidden');
					moonIcon.classList.add('hidden');
				}
			}
		}

		// Initial icon update
		updateThemeIcon();

		// Update icon on theme change
		themeToggle?.addEventListener('click', () => {
			setTimeout(updateThemeIcon, 100);
		});

		// Add some interactive animations
		const techItems = document.querySelectorAll('.tech-item');
		techItems.forEach((item, index) => {
			item.style.animationDelay = `${index * 0.1}s`;
			item.classList.add('animate-fade-in');
		});

		// Contact button click tracking
		const contactButtons = document.querySelectorAll('a[href^="mailto:"], a[href^="tel:"], a[href*="github.com"], a[href*="linkedin.com"]');
		contactButtons.forEach(button => {
			button.addEventListener('click', (e) => {
				// Add click animation
				button.style.transform = 'scale(0.95)';
				setTimeout(() => {
					button.style.transform = '';
				}, 150);
			});
		});
	</script>

	<style>
		.w-full {
			width: 100%;
		}

		.space-y-4 > * + * {
			margin-top: 1rem;
		}

		.mx-auto {
			margin-left: auto;
			margin-right: auto;
		}

		.hidden {
			display: none;
		}

		/* Bitmoji Avatar Styles */
		.bitmoji-avatar {
			position: relative;
			width: 200px;
			height: 200px;
			margin-bottom: 2rem;
			animation: float 3s ease-in-out infinite;
		}

		/* Person */
		.person {
			position: absolute;
			top: 20px;
			left: 50%;
			transform: translateX(-50%);
			z-index: 2;
		}

		/* Head */
		.head {
			position: relative;
			width: 50px;
			height: 50px;
		}

		.hair {
			position: absolute;
			top: -5px;
			left: 5px;
			width: 40px;
			height: 25px;
			background: #2d1810;
			border-radius: 20px 20px 5px 5px;
			z-index: 1;
		}

		.face {
			position: relative;
			width: 40px;
			height: 40px;
			background: #fdbcb4;
			border-radius: 50%;
			margin: 5px;
			z-index: 2;
		}

		.eyes {
			position: absolute;
			top: 12px;
			left: 50%;
			transform: translateX(-50%);
			display: flex;
			gap: 8px;
		}

		.eye {
			width: 4px;
			height: 4px;
			background: #333;
			border-radius: 50%;
		}

		.nose {
			position: absolute;
			top: 18px;
			left: 50%;
			transform: translateX(-50%);
			width: 2px;
			height: 2px;
			background: #e8a598;
			border-radius: 50%;
		}

		.mouth {
			position: absolute;
			top: 22px;
			left: 50%;
			transform: translateX(-50%);
			width: 8px;
			height: 4px;
			border: 1px solid #333;
			border-top: none;
			border-radius: 0 0 8px 8px;
		}

		/* Body */
		.body {
			position: relative;
			margin-top: 5px;
		}

		.shirt {
			width: 35px;
			height: 30px;
			background: var(--color-primary);
			border-radius: 8px 8px 0 0;
			margin: 0 auto;
			position: relative;
		}

		.arms {
			position: absolute;
			top: 5px;
			left: 50%;
			transform: translateX(-50%);
			width: 60px;
			height: 20px;
		}

		.arm {
			position: absolute;
			width: 15px;
			height: 25px;
			background: #fdbcb4;
			border-radius: 8px;
		}

		.arm.left {
			left: -5px;
			transform: rotate(-20deg);
			animation: typing 2s ease-in-out infinite;
		}

		.arm.right {
			right: -5px;
			transform: rotate(20deg);
			animation: typing 2s ease-in-out infinite 0.5s;
		}

		/* Laptop */
		.laptop {
			position: absolute;
			bottom: 30px;
			left: 50%;
			transform: translateX(-50%);
			z-index: 1;
		}

		.laptop-screen {
			width: 80px;
			height: 50px;
			background: #1a1a1a;
			border: 3px solid #333;
			border-radius: 5px 5px 0 0;
			position: relative;
			transform: perspective(100px) rotateX(-10deg);
		}

		.screen-content {
			padding: 8px;
			height: 100%;
		}

		.code-line {
			height: 2px;
			background: var(--color-primary);
			margin-bottom: 3px;
			border-radius: 1px;
			animation: codeGlow 2s ease-in-out infinite;
		}

		.code-line.short {
			width: 60%;
		}

		.laptop-base {
			width: 85px;
			height: 8px;
			background: #666;
			border-radius: 0 0 8px 8px;
			position: relative;
			margin-top: -2px;
		}

		.keyboard {
			position: absolute;
			top: 1px;
			left: 8px;
			right: 8px;
			height: 4px;
			background: #333;
			border-radius: 2px;
		}

		.trackpad {
			position: absolute;
			bottom: 1px;
			left: 50%;
			transform: translateX(-50%);
			width: 15px;
			height: 3px;
			background: #444;
			border-radius: 2px;
		}

		/* Floating Elements */
		.floating-elements {
			position: absolute;
			top: 0;
			left: 0;
			width: 100%;
			height: 100%;
			pointer-events: none;
		}

		.code-symbol {
			position: absolute;
			font-family: 'Courier New', monospace;
			font-weight: bold;
			color: var(--color-primary);
			font-size: 14px;
			animation: float 4s ease-in-out infinite;
		}

		.code-symbol:nth-child(1) {
			top: 20px;
			right: 20px;
			animation-delay: 0s;
		}

		.code-symbol:nth-child(2) {
			top: 60px;
			left: 10px;
			animation-delay: 1s;
		}

		.code-symbol:nth-child(3) {
			bottom: 40px;
			right: 10px;
			animation-delay: 2s;
		}

		/* Animations */
		@keyframes float {
			0%, 100% {
				transform: translateY(0px);
			}
			50% {
				transform: translateY(-10px);
			}
		}

		@keyframes typing {
			0%, 100% {
				transform: rotate(-20deg) translateY(0px);
			}
			50% {
				transform: rotate(-20deg) translateY(-3px);
			}
		}

		.arm.right {
			animation-name: typingRight;
		}

		@keyframes typingRight {
			0%, 100% {
				transform: rotate(20deg) translateY(0px);
			}
			50% {
				transform: rotate(20deg) translateY(-3px);
			}
		}

		@keyframes codeGlow {
			0%, 100% {
				opacity: 0.7;
			}
			50% {
				opacity: 1;
				box-shadow: 0 0 5px var(--color-primary);
			}
		}

		/* Hover effect */
		.bitmoji-avatar:hover {
			transform: scale(1.05);
			transition: transform 0.3s ease;
		}

		.bitmoji-avatar:hover .code-symbol {
			animation-duration: 2s;
		}

		.bitmoji-avatar:hover .arm {
			animation-duration: 1s;
		}

		@keyframes fadeIn {
			from {
				opacity: 0;
				transform: translateY(20px);
			}
			to {
				opacity: 1;
				transform: translateY(0);
			}
		}

		.animate-fade-in {
			animation: fadeIn 0.6s ease-out forwards;
		}

		/* Enhanced hover effects */
		.card:hover {
			border-color: var(--color-primary);
		}

		.btn:active {
			transform: translateY(0) scale(0.98);
		}

		/* Responsive adjustments */
		@media (max-width: 768px) {
			.text-4xl {
				font-size: 2rem;
				line-height: 2.25rem;
			}
			
			.text-xl {
				font-size: 1.125rem;
				line-height: 1.5rem;
			}

			.theme-toggle {
				top: 0.5rem;
				right: 0.5rem;
				width: 40px;
				height: 40px;
			}
		}
	</style>
</Layout>